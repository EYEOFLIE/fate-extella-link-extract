/*
 *	サーヴァントAI反応行動
 *	パラメータの詳細は、サーヴァントAI設定マニュアル（反応行動編）を参照
 */
// 行動条件：
// 1.
// 敵サーヴァントが待機または移動状態
// 2. 
// jump_reaction: プレイヤーが空中にいて、ダッシュ または ダメージ食らい中でない
// dash_reaction: プレイヤーがダッシュ中（空中ダッシュを含む。jump_reactionとは重複しない）
// guard_reaction: プレイヤーがガード中
//
// 発動確率は100を上限とするパーセンテージ
// 同時に複数の行動が条件を満たした場合、上の方に書かれたものから順に判定を行う
{
	// HP50％以上
	"normal":
	[
		// ---- ジャンプ対応行動 ----
		{
			"type":"jump_reaction",	// 対応行動タイプ（ジャンプ対応行動）
			"command":[			// 対応行動のモーションコマンド
				"JU",
				"JUMP_ATTACK_W1",
				"JUMP_ATTACK_W2",
				"JUMP_ATTACK_W3"
			],
			"range":12,			// 発動可能距離
			"angle":60,			// 発動可能角度
			"percent":30,			// 発動確率
			"reaction_moment":0.1,	// 発動前のディレイ
			"attack_stop_angle":70.0,	// プレイヤーとの角度がこれ以上になると攻撃停止（0°～180°）
			"guard_percent":10.0,	// 行動中のガード率（この時にプレイヤーに攻撃された場合）
			"guard_continue_time":0.2,	// 行動中のガード継続時間（プレイヤーの攻撃が終わってからもガードし続ける時間）
			"counter_percent":0.0,	// 行動中のカウンター確率（この時にプレイヤーに攻撃された場合）
			"counter_increase":3.0,	// ガード成功時のカウンター確率上昇値
			"counter_begin_inc":3,		// 連続ガードがこの回数に達するとカウンター確率上昇開始
			"minimum_after_moment":0.8,	// 攻撃でプレイヤーを吹っ飛ばした後の最低限待機時間
			"after_moment":1.5,		// 攻撃でプレイヤーを吹っ飛ばした後の待機時間上限
			"resume_wait_dis":9.0		// 攻撃でプレイヤーを吹っ飛ばした後、行動を再開するプレイヤーとの距離
		}
	],
	// HP50％未満
	"careful":
	[
		// ---- ジャンプ対応行動 ----
		{
			"type":"jump_reaction",	// 対応行動タイプ（ジャンプ対応行動）
			"command":[			// 対応行動のモーションコマンド
				"JU",
				"JUMP_ATTACK_W1",
				"JUMP_ATTACK_W2",
				"JUMP_ATTACK_S1"
			],
			"range":12,			// 発動可能距離
			"angle":60,			// 発動可能角度
			"percent":30,			// 発動確率
			"reaction_moment":0.1,	// 発動前のディレイ
			"attack_stop_angle":70.0,	// プレイヤーとの角度がこれ以上になると攻撃停止（0°～180°）
			"guard_percent":10.0,	// 行動中のガード率（この時にプレイヤーに攻撃された場合）
			"guard_continue_time":0.4,	// 行動中のガード継続時間（プレイヤーの攻撃が終わってからもガードし続ける時間）
			"counter_percent":0.0,	// 行動中のカウンター確率（この時にプレイヤーに攻撃された場合）
			"counter_increase":3.0,	// ガード成功時のカウンター確率上昇値
			"counter_begin_inc":3,		// 連続ガードがこの回数に達するとカウンター確率上昇開始
			"minimum_after_moment":0.8,	// 攻撃でプレイヤーを吹っ飛ばした後の最低限待機時間
			"after_moment":1.5,		// 攻撃でプレイヤーを吹っ飛ばした後の待機時間上限
			"resume_wait_dis":9.0		// 攻撃でプレイヤーを吹っ飛ばした後、行動を再開するプレイヤーとの距離
		}
	],
	// 変身中
	 "special":
	[
		// ---- ガード対応行動 ----
		{
			"type":"guard_reaction",	// 対応行動タイプ（ガード対応行動）
			"command":[			// 対応行動のモーションコマンド
				"GUARD_BREAK",		// ※ガードブレイクは変身中限定なので注意
				"ATTACK_W1",			// 弱1
				"ATTACK_W2",			// 弱2
				"ATTACK_W3",			// 弱3
				"ATTACK_W4",			// 弱4
				"ATTACK_W8"			// 弱8
			],
			"range":6,			// 発動可能距離
			"angle":60,			// 発動可能角度
			"percent":80,			// 発動確率
			"reaction_moment":0.1,	// 発動前のディレイ
			"attack_stop_angle":70.0,	// プレイヤーとの角度がこれ以上になると攻撃停止（0°～180°）
			"guard_percent":10.0,	// 行動中のガード率（この時にプレイヤーに攻撃された場合）
			"guard_continue_time":0.4,	// 行動中のガード継続時間（プレイヤーの攻撃が終わってからもガードし続ける時間）
			"counter_percent":0.0,	// 行動中のカウンター確率（この時にプレイヤーに攻撃された場合）
			"counter_increase":3.0,	// ガード成功時のカウンター確率上昇値
			"counter_begin_inc":3,		// 連続ガードがこの回数に達するとカウンター確率上昇開始
			"minimum_after_moment":0.8,	// 攻撃でプレイヤーを吹っ飛ばした後の最低限待機時間
			"after_moment":1.5,		// 攻撃でプレイヤーを吹っ飛ばした後の待機時間上限
			"resume_wait_dis":9.0		// 攻撃でプレイヤーを吹っ飛ばした後、行動を再開するプレイヤーとの距離
		}
	]
}